<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="print_bom_wiz_form_view" model="ir.ui.view">
            <field name="name">print_bom_wiz_form_view</field>
            <field name="model">print.bom.wiz</field>
            <field name="arch" type="xml">
                <form string="Check LdM artículos">
                    <header>
                        <!--<button name="remove_bom_lines" type="object" string="Borrar" class="oe_highlight"/>-->
                        <!--<button name="get_all_bom_lines" type="object" string="Completa" class="oe_highlight"/>-->
                        <button name="get_all_bom_lines_with_bom" type="object"
                                string="COMPLETA" class="oe_highlight"/>
                        <button name="get_all_bom_lines_without_hrj" type="object"
                                string="Sin HERRAJES" class="oe_highlight"/>
                        <button name="get_all_bom_lines_only_hrj" type="object"
                                string="Solo HERRAJES" class="oe_highlight"/>
                        <button name="get_all_bom_lines_only_mad" type="object"
                                string="Solo MADERA" class="oe_highlight"/>
                        <button name="get_all_bom_lines_only_ptg" type="object"
                                string="Solo PANTOGRAFO" class="oe_highlight"/>
                        <button name="get_all_bom_lines_only_met" type="object"
                                string="Solo METAL" class="oe_highlight"/>
                        <button name="print_bom" type="object"
                                string="IMPRIMIR" class="oe_highlight"/>
                    </header>
                    <sheet>

                        <div>
                            <group>
                                <label for="button_pressed" string="Solicitud"/>
                                <div>
                                    <field name="button_pressed" readonly="1"/>
                                </div>
                                <label for="bom_id" string="Lista de Materiales"/>
                                <div>
                                    <field name="bom_id"/>
                                </div>
                            </group>
                        </div>
                        <!--<div class="alert alert-info" role="alert">
                            <p>
                                <span class="fa fa-info-circle"/>
                                Líneas de la lista de materiales
                            </p>
                        </div>-->
                        <div>
                            <field name="bom_line_ids" widget="one2many">
                                <tree string="Components" limit="1000" editable="true"
                                      decoration-danger="has_pdf == False and to_print == True">
                                    <field name="to_print"/>
                                    <field name="has_pdf"/>
                                    <field name="mrp_bom_line_level"/>
                                    <field name="name"/>
                                    <field name="qty" optional="hide"/>
                                    <field name="default_code" optional="hide"/>
                                    <field name="route" optional="hide"/>
                                    <field name="path" optional="hide"/>
                                    <field name="parent_bom" optional="hide"/>
                                    <field name="has_bom_line_ids" optional="hide"/>
                                    <field name="wizard_id" optional="hide"/>
                                </tree>
                            </field>
                        </div>
                    </sheet>
                    <footer>
                        <!--<button name="print_bom" type="object" string="Aplicar" class="oe_highlight"/>-->
                        <button special="cancel" string="Cancelar"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>