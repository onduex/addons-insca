<?xml version="1.0"?>
<odoo>
    <template id="maincer.report_hoja_material">
        <t t-call="web.html_container" t-lang="es_ES">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2>
                        <span>R.48-01: HOJA DE MATERIAL</span>
                    </h2>

                    <t t-foreach="docs" t-as="doc">
                        <t t-set="client" t-value="doc.list_customers(docs)"/>
                        <t t-set="work" t-value="doc.list_works(docs)"/>
                        <t t-set="manager" t-value="doc.list_managers(docs)"/>
                        <t t-set="fecha_solicitud" t-value="doc.list_solicitudes(docs)"/>
                        <t t-set="fecha_recepción" t-value="doc.list_recepciones(docs)"/>
                        <t t-set="fecha_entrega_cliente" t-value="doc.list_entregas(docs)"/>
                    </t>

                    <div id="informations" class="row">
                        <div id="left" class="col-8">
                            <div>
                                <strong>Cliente:</strong>
                                <span t-esc="client"/>
                            </div>
                            <div>
                                <strong>Trabajo:</strong>
                                <span t-esc="work"/>
                            </div>
                            <div>
                                <strong>Emitido por:</strong>
                                <span t-esc="manager"/>
                            </div>
                        </div>
                        <div id="right" class="col-4">
                            <div class="text-right">
                                <strong>Solicitud:</strong>
                                <span t-esc="fecha_solicitud"/>
                            </div>
                            <div class="text-right">
                                <strong>Recepción:</strong>
                                <span t-esc="fecha_recepción"/>
                            </div>
                            <div class="text-right">
                                <strong>Entrega:</strong>
                                <span t-esc="fecha_entrega_cliente"/>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <table class="table table-sm o_main_table" name="bom_line_table">
                        <thead>
                            <tr>
                                <th name="th_entregado" class="text-center">
                                    <span>ENT</span>
                                </th>
                                <th name="th_recibido" class="text-center">
                                    <span>REC</span>
                                </th>
                                <th name="th_quantity" class="text-right">
                                    <span>CANT</span>
                                </th>
                                <th name="th_component" class="text-left">
                                    <span>Componente</span>
                                </th>
                                <th name="th_material" class="text-left">
                                    <span>Material</span>
                                </th>
                                <th name="th_acabado" class="text-left">
                                    <span>Acabado</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="material_tbody">
                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td name="entregado">
                                        <span t-field="line.entregado"/>
                                    </td>
                                    <td name="recibido">
                                        <span t-field="line.recibido"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty"/>
                                        <!--<span t-field="line.product_uom_id"/>-->
                                    </td>
                                    <td class="text-left">
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-field="line.material"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-field="line.acabado"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </div>
            </t>
        </t>
    </template>

</odoo>
