<?xml version="1.0"?>
<odoo>
    <data>
        <template id="external_layout_boxed_workorder">
            <t t-name="insca5.external_layout_boxed_workorder">
                <div class="header">
                    <div class="o_boxed_header" style="font-size:3.5mm">
                        <div class="row mb8">
                            <div class="col-6">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                            </div>
                        </div>
                        <br/>
                        <div id="informations" class="row">
                            <div id="left" class="col-9">
                                <div>
                                    <li style="width:32mm" class="list-inline-item">MAQUINA:</li>
                                    <strong>
                                        <span t-esc="'%.0f'% doc.product_qty"/>X
                                        <span t-field="doc.product_tmpl_id"/>
                                    </strong>
                                </div>
                                <div>
                                    <li style="width:32mm" class="list-inline-item">TRABAJO:</li>
                                    <strong>
                                        <span t-field="doc.trabajo"/>
                                    </strong>
                                </div>
                                <div>
                                    <li style="width:32mm" class="list-inline-item">CLIENTE:</li>
                                    <strong>
                                        <span t-field="doc.cliente"/>
                                    </strong>
                                </div>
                                <div>
                                    <li style="width:32mm" class="list-inline-item">EMITIDO POR:</li>
                                    <li style="width:32mm" class="list-inline-item">
                                        <strong>
                                            <span t-field="doc.emitido"/>
                                        </strong>
                                    </li>
                                    <span>FECHA:</span>
                                    <strong>
                                        <span t-field="doc.fecha_solicitud"/>
                                    </strong>
                                </div>
                                <div>
                                    <li style="width:32mm" class="list-inline-item">PREPARADO POR:</li>
                                    <li style="width:32mm" class="list-inline-item">
                                        <strong>
                                            <span t-field="doc.preparado" style="width:80%%"/>
                                        </strong>
                                    </li>
                                    <span>FECHA:</span>
                                    <strong>
                                        <span t-field="doc.fecha_recepcion"/>
                                    </strong>
                                </div>
                                <div>
                                    <li style="width:32mm" class="list-inline-item">RECOGIDO POR:</li>
                                    <li style="width:32mm" class="list-inline-item">
                                        <strong>
                                            <span t-field="doc.recogido" style="width:80%%"/>
                                        </strong>
                                    </li>
                                    <span>FECHA:</span>
                                    <strong>
                                        <span t-field="doc.fecha_recogido"/>
                                    </strong>
                                </div>
                            </div>
                            <div id="right" class="col-3">
                                <div class="text-right">
                                    <li style="width:25mm" class="list-inline-item">R:20:</li>
                                        <strong>
                                            <span t-field="doc.code"/>
                                        </strong>
                                </div>
                                <div class="text-right">
                                    <li style="width:25mm" class="list-inline-item">ENTREGA:</li>
                                        <strong>
                                            <span t-field="doc.fecha_entrega_cliente"/>
                                        </strong>
                                </div>
                            </div>
                        </div>
                        <br/>
                    </div>
                </div>

                <div class="article o_report_layout_boxed" t-att-data-oe-model="o and o._name"
                     t-att-data-oe-id="o and o.id"
                     t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <!--<div class="pt-5">
                        <t t-call="web.address_layout"/>
                    </div>-->
                    <t t-out="0"/>
                </div>

                <div class="footer o_boxed_footer" style="font-size:3.5mm">
                    <div class="text-left">
                        <ul class="list-inline">
                            OBSERVACIONES:
                            <li t-if="doc.observaciones" class="list-inline-item">
                                <span t-field="doc.observaciones"/>
                            </li>
                        </ul>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div t-if="report_type == 'pdf'" class="text-center">
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>

