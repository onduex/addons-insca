                            </div>
                            <div>
                                <label for="embalaje_bom" string="LdM Embalaje: "/>
                                <field name="embalaje_bom"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="largo"/>
                                <field name="ancho"/>
                                <field name="alto"/>
                                <field name="espesor_base"/>
                                <field name="n_tacos"/>
                            </group>
                            <group>
                                <label for="tapa" string="Tapa"/>
