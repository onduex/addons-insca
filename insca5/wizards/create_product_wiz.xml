<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="create_product_wiz_form_view" model="ir.ui.view">
            <field name="name">create_product_wiz_form_view</field>
            <field name="model">create.product.wiz</field>
            <field name="arch" type="xml">
                <form string="Check LdM artículos">
                    <sheet>
                        <div>
                            <field name="product_ids" nolabel="1">
                                <tree>
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </div>
                        <div>
                            <field name="categ_id"/>
                            <group>
                                <group>
                                    <field name="product_length"/>
                                    <field name="product_width"/>
                                </group>
                                <group>

                                </group>
                            </group>
                        </div>
                        <!--<div class="alert alert-info" role="alert">
                            <p><span class="fa fa-info-circle"/> Productos existentes en la categoría</p>
                        </div>-->
                    </sheet>
                    <footer>
                        <button name="create_bom" type="object" string="Aplicar" class="oe_highlight"/>
                        <button special="cancel" string="Cancelar"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>