<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Product View: add product data -->
    <record id="product_template_form_view_iviei" model="ir.ui.view">
        <field name="name">product.template.form.view.iviei</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//notebook//page//group" position="after">
                <group>
                    <group name="Left">
                        <field name="auto_name"/>
                        <field name="model"/>
                        <field name="material"/>
                        <field name="size"/>
                    </group>
                    <group name="Right"> </group>
                </group>
            </xpath>
            <xpath expr="//h1" position="replace">
                <h3 style="width:500px">
                    <field name="name" placeholder="Product Name"/>
                </h3>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_iviei" model="ir.ui.view">
        <field name="name">product.template.tree.view.iviei</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="field[@name='name']" position="after">
                <field name="model"/>
                <field name="material"/>
                <field name="size"/>
            </xpath>

        </field>
    </record>

</odoo>